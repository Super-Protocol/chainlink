# ==============================================================================
# PRICE PROXY SERVICE CONFIGURATION
# ==============================================================================
# This file contains sample environment variables for the Price Proxy service
# Copy this file to .env and adjust values according to your environment

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# Application environment mode
# Available values: development, production, test
# Default: development
NODE_ENV=development

# Port for the HTTP server
# Default: 3000
PORT=3000

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

# Logging level for the application
# Available values: error, warn, info, debug, verbose
# Default: info
LOGGER_LEVEL=info

# Enable pretty printing for logs
# Set to 'true' for development, 'false' for production
# Default: false
LOGGER_PRETTY_ENABLED=false

# ==============================================================================
# PRICE PROXY CONFIGURATION
# ==============================================================================

# Interval for refreshing price data in milliseconds
# Default: 30000 (30 seconds)
PRICE_PROXY_REFRESH_INTERVAL_MS=30000

# HTTP request timeout in milliseconds
# Default: 10000 (10 seconds)
PRICE_PROXY_REQUEST_TIMEOUT_MS=10000

# Maximum number of retries for failed requests
# Default: 3
PRICE_PROXY_MAX_RETRIES=3
